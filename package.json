{
  "name": "speedfox",
  "version": "4.0.4",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "npm install --save-dev electron && npm install net request winston winston-daily-rotate-file",
    "build": "npm install jsbn && electron-builder"
  },
  "build": {
    "productName": "极狐游戏加速器",
    "appId": "com.speedfox.run",
    "copyright": "Copyright © 2021 极狐游戏加速器全套解决方案供应商",
    "electronVersion": "30.0.9",
    "directories": {
      "output": "build"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "win": {
      "icon": "bin/static/logo/speedfox.ico",
      "requestedExecutionLevel": "highestAvailable",
      "sign": "beforeBuild.js"
    },
    "files": [
      "!resources",
      "!.gitee",
      "!README.*",
      "!*.py",
      "!bin/**"
    ],
    "extraResources": [
      {
        "from": "./bin/",
        "to": "../bin/"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "language": "2052",
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "jsbn": "^1.1.0",
    "net": "^1.0.2",
    "request": "^2.88.2",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.9.1"
  }
}
